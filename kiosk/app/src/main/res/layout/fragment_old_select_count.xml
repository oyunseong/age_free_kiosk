<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="62dp">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="169dp"
        android:lineHeight="90dp"
        android:text="선택하신 상품의 수량을\n정해주세요!"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <LinearLayout
        android:id="@+id/menu_detail_container"
        android:layout_width="match_parent"
        android:layout_height="852dp"
        android:layout_marginHorizontal="108dp"
        android:layout_marginTop="69dp"
        android:background="@drawable/round_30_border_8_box"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/menu_image_view"
            android:layout_width="226dp"
            android:layout_height="271dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            tools:src="@drawable/img_sample" />

        <TextView
            android:id="@+id/menu_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/price_text_view"
            app:layout_constraintLeft_toRightOf="@+id/menu_image_view"
            app:layout_constraintTop_toTopOf="@+id/menu_image_view"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="아메리카노" />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/menu_image_view"
            app:layout_constraintLeft_toLeftOf="@+id/menu_text_view"
            app:layout_constraintTop_toBottomOf="@+id/menu_text_view"
            tools:text="5,000원" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cold_hot_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_24_border_4_box"
                android:paddingHorizontal="26.5dp"
                android:paddingVertical="23.5dp"
                android:textColor="#767676"
                android:textSize="44sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_detail_select_text_view"
                tools:text="차갑게" />

            <TextView
                android:id="@+id/soft_deep_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_24_border_4_box"
                android:paddingHorizontal="26.5dp"
                android:paddingVertical="23.5dp"
                android:textColor="#767676"
                android:textSize="44sp"
                app:layout_constraintLeft_toRightOf="@+id/cold_hot_text_view"
                app:layout_constraintTop_toBottomOf="@+id/my_detail_select_text_view"
                tools:text="연하게" />

            <TextView
                android:id="@+id/amount_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_24_border_4_box"
                android:gravity="center"
                android:minWidth="132dp"
                android:paddingHorizontal="26.5dp"
                android:paddingVertical="23.5dp"
                android:textColor="#767676"
                android:textSize="44sp"
                app:layout_constraintLeft_toRightOf="@+id/cold_hot_text_view"
                app:layout_constraintTop_toBottomOf="@+id/my_detail_select_text_view"
                tools:text="기본" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/minus_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:layout_marginTop="100dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_minus"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/count_text_view"
        app:layout_constraintTop_toBottomOf="@+id/menu_detail_container"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

    <TextView
        android:id="@+id/count_text_view"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="94dp"
        android:gravity="center"
        android:text="1"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@id/minus_button"
        app:layout_constraintLeft_toRightOf="@id/minus_button"
        app:layout_constraintRight_toLeftOf="@+id/plus_button"
        app:layout_constraintTop_toTopOf="@id/minus_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/plus_button"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_minus"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:layout_constraintBottom_toBottomOf="@id/minus_button"
        app:layout_constraintLeft_toRightOf="@+id/count_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/minus_button"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="144dp"
        android:layout_marginBottom="100dp"
        android:text="확인"
        android:textSize="60sp"
        app:cornerRadius="28dp"
        app:layout_constraintTop_toBottomOf="@+id/count_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>