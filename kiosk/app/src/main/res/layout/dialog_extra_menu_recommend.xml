<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="62dp"
    android:layout_marginVertical="482dp"
    android:background="@drawable/dialog_best_menu_recommend">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="54dp"
        android:letterSpacing="0.072"
        android:lineHeight="72dp"
        android:text="함께 하면 더 맛있는\n케이크 추천!"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="93dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/round_36_box"
        app:layout_constraintBottom_toTopOf="@id/cancel_btn"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/second_menu_container"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/first_recommend_item_image_view"
        android:layout_width="148dp"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/first_menu_container"
        app:layout_constraintRight_toRightOf="@+id/first_menu_container"
        app:layout_constraintTop_toTopOf="@+id/first_menu_container"
        app:riv_corner_radius="30dp" />

    <TextView
        android:id="@+id/first_recommend_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="티라미수"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/first_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/first_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/first_recommend_item_image_view" />

    <TextView
        android:id="@+id/first_recommend_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,000원"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/first_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/first_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/first_recommend_item_text_view" />


    <TextView
        android:id="@+id/second_menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="93dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/round_36_box"
        app:layout_constraintBottom_toTopOf="@id/cancel_btn"
        app:layout_constraintLeft_toRightOf="@+id/first_menu_container"
        app:layout_constraintRight_toLeftOf="@+id/third_menu_container"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/second_recommend_item_image_view"
        android:layout_width="148dp"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/second_menu_container"
        app:layout_constraintRight_toRightOf="@+id/second_menu_container"
        app:layout_constraintTop_toTopOf="@+id/second_menu_container"
        app:riv_corner_radius="30dp" />

    <TextView
        android:id="@+id/second_recommend_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="레드벨벳 케이크"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/second_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/second_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/second_recommend_item_image_view" />

    <TextView
        android:id="@+id/second_recommend_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,000원"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/second_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/second_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/second_recommend_item_text_view" />


    <TextView
        android:id="@+id/third_menu_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="93dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="114dp"
        android:background="@drawable/round_36_box"
        app:layout_constraintBottom_toTopOf="@id/cancel_btn"
        app:layout_constraintLeft_toRightOf="@+id/second_menu_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/third_recommend_item_image_view"
        android:layout_width="148dp"
        android:layout_height="165dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/third_menu_container"
        app:layout_constraintRight_toRightOf="@id/third_menu_container"
        app:layout_constraintTop_toTopOf="@+id/third_menu_container"
        app:riv_corner_radius="30dp" />

    <TextView
        android:id="@+id/third_recommend_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:text="쇼콜라 케이크"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/third_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/third_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/third_recommend_item_image_view" />

    <TextView
        android:id="@+id/third_recommend_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6,000원"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@+id/third_recommend_item_image_view"
        app:layout_constraintRight_toRightOf="@+id/third_recommend_item_image_view"
        app:layout_constraintTop_toBottomOf="@+id/third_recommend_item_text_view" />


    <TextView
        android:id="@+id/cancel_btn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/round_border_4dp_btn"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:letterSpacing="0.072"
        android:text="아니요"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/add_btn" />

    <TextView
        android:id="@+id/add_btn"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/order_btn"
        android:fontFamily="@font/pretendard_bold"
        android:gravity="center"
        android:letterSpacing="0.072"
        android:text="추가하기"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cancel_btn"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>